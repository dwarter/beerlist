<tr>
  <td class="micropost">
    <span class="content">
    	<info2>
        <ul>
    	<li><strong>Beer:</strong> <%= micropost.newbeer %></li>
    	<li><strong>Grade:</strong> <%= micropost.grade %></li>
    	<li><strong>Comments:</strong> <%= micropost.content %></li>
    	</ul>
      </info2>
    </span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(micropost.user) %>
  <td>
    <%= link_to "delete", destroy_micropost_path(micropost.id), :method => :delete,
                                     :confirm => "You sure?",
                                     :title => micropost.content %>
  </td>
  <% end %>
</tr>