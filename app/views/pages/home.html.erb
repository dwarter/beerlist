<center>
	<h1><u>*Home</u></h1>
	</center>
<% if signed_in? %>
  
   <info2>
  	<h2>News:</h2>
  		<% @mostrecentarticles.each do |m|%>
  		<%=image_tag(m.articlepic, :width => '200')%>
  		<ul>
  		<li><h4><u><%=truncate(m.title, :length =>100)%></u></h4></li>
  		<li><%=truncate(m.content, :length =>200)%></li>
  		<li><%= link_to "Checkout", article_path(m)%></li>
  		</ul>
  	<%end%>
  </info2>
  <info2>
  	<h2>Upcoming Events:</h2>
  		<% @mostrecentevents.each do |m|%>
  		<ul>
  		<%=image_tag(m.eventpic, :width => '200')%>
  		<li><h4><u><%=truncate(m.name, :length =>100)%></u></h4></li>
  		<li><%=truncate(m.description, :length =>200)%></li>
  		<li><%= link_to "Checkout", event_path(m)%></li>
  		</ul>
  	<%end%>
  </info2>
 
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
       <h2>Your Daily Feeds:</h2>
        <%= render 'shared/feed' %>
      </td>
      
    </tr>
  </table>
<% else %>
  

  <p>
    Become part of our online beer tasting community!
  </p>

  <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>