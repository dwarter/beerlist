<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
  	<strong>Beer</strong><br />
    <%= f.text_field :newbeer %>
  </div>
  <div class="field">
  	<strong>Grade</strong><br />
    <%= f.text_field :grade %>
  </div>
  <div class="field">
  	<strong>Comments</strong><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Cheers!" %>
  </div>
<% end %>