 <div class="message">
    <div class="created_at"><%= message.user.name %> on <%= message.created_at.strftime("%B %d, %Y") %></div>
    <div class="content">
    
   
   <% if message.user.gravatar_file_name %>	
					<%= image_tag(message.user.gravatar.url, :height => '70', :width =>'70')%>
				<% else %>
        	<%= default2 %>
				<% end %>	
     <b><u><%= message.title %></u></b> <%= message.content %>
    </div>
    <div class="actions">
      <%= link_to "Reply", new_message_path(:parent_id => message)%> |
      <%= link_to "Destroy", message, :confirm => "Are you sure?", :method => :delete %>
    </div>
  </div>