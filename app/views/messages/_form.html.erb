<%= form_for @message do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :parent_id %>
  <p>
  	 <%= f.label :title, "Title" %><br />
    <%= f.text_field :title, :rows => 8 %><br />
    <%= f.label :content, "Forum Post" %><br />
    <%= f.text_area :content, :rows => 8 %><br />
  </p>
  <p><%= f.submit "Post Message" %></p>
<% end %>
